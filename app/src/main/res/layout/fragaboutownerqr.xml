<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/gbrqr"
        android:layout_width="600dp"
        android:layout_height="900dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bgputih" />

    <EditText
        android:id="@+id/edTCode"
        android:layout_width="346dp"
        android:layout_height="43dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Nama Alamatt"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnScanqr"
        android:layout_width="129dp"
        android:layout_height="58dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#009688"
        android:text="SCAN QRCODE"
        android:textColor="#020202"
        app:cornerRadius="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTCode" />

    <Button
        android:id="@+id/btnGenqr"
        android:layout_width="162dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="33dp"
        android:backgroundTint="#009688"
        android:text="GENERATE QRCODE"
        android:textColor="#000000"
        app:cornerRadius="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edTCode" />

    <ImageView
        android:id="@+id/imageVQR"
        android:layout_width="351dp"
        android:layout_height="470dp"
        app:layout_constraintTop_toBottomOf="@+id/btnScanqr"
        tools:layout_editor_absoluteX="31dp"
        tools:srcCompat="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="170dp"
        android:text="QR Code"
        android:textColor="#BA7237"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>